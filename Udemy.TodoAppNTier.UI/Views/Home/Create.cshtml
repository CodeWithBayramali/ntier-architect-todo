@model WorkCreateDTO
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ToDo App</title>
    <link rel="stylesheet" href="/node_modules/bootstrap/dist/css/bootstrap.min.css">
</head>

<body>
    <div class="container my-2">

        <form asp-action="create" asp-controller="home" method="post">
            <div class="mb-3">
                <label>Work Definition:</label>
                <input asp-for="Definition" class="form-control"/>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsCompleted">
                <label class="form-check-label" for="IsCompleted">
                    Is Completed
                </label>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>
        </form>

    </div>
</body>

</html>